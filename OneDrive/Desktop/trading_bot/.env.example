# Environment Configuration for Trading Bot
# Copy this file to .env and fill in your actual values

# Application Environment
ENVIRONMENT=development
LOG_LEVEL=INFO

# Trading Configuration
MAX_POSITION_SIZE=1000.0
MAX_POSITIONS=10
DAILY_LOSS_LIMIT=-500.0
STOP_LOSS_PCT=0.05
TAKE_PROFIT_PCT=0.15
POSITION_SIZE_BASE=0.02
ENABLED_EXCHANGES=binance
TRADING_PAIRS=BTCUSDT,ETHUSDT,SOLUSDT

# Exchange API Keys - Binance
BINANCE_API_KEY=your_binance_api_key_here
BINANCE_SECRET=your_binance_secret_here
BINANCE_TESTNET=true

# Exchange API Keys - Coinbase Pro
COINBASE_API_KEY=your_coinbase_api_key_here
COINBASE_SECRET=your_coinbase_secret_here
COINBASE_PASSPHRASE=your_coinbase_passphrase_here
COINBASE_SANDBOX=true

# Social Media APIs
TWITTER_BEARER_TOKEN=your_twitter_bearer_token_here
REDDIT_CLIENT_ID=your_reddit_client_id_here
REDDIT_CLIENT_SECRET=your_reddit_client_secret_here

# Database URLs
DATABASE_URL=postgresql://postgres:password@localhost:5432/trading_bot
TIMESCALE_URL=postgresql://postgres:password@localhost:5433/timeseries
REDIS_URL=redis://localhost:6379

# Sentiment Analysis
SENTIMENT_THRESHOLD=0.6
SENTIMENT_MODEL=cardiffnlp/twitter-roberta-base-sentiment-latest
SENTIMENT_INTERVAL=300

# Risk Management
RUGPULL_THRESHOLD=0.3
MIN_CONFIDENCE=0.6
MAX_DAILY_TRADES=50

# Data Collection
MARKET_DATA_INTERVAL=1
HISTORICAL_DAYS=30
CLEANUP_INTERVAL=3600

# Monitoring
METRICS_PORT=8001
HEALTH_CHECK_INTERVAL=30